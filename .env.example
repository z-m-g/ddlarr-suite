# =============================================================================
# DDL Torznab - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Ports Configuration
# -----------------------------------------------------------------------------
INDEXER_PORT=9117
DOWNLOADER_PORT=9118
DLPROTECT_RESOLVER_PORT=5000

# -----------------------------------------------------------------------------
# Site URLs (optional - auto-detected from Telegram if empty)
# -----------------------------------------------------------------------------
# If left empty, URLs are automatically fetched from official Telegram channels.
# You can force specific URLs by setting them here.

# Wawacity URL (leave empty for auto-detection)
WAWACITY_URL=

# ZoneTelecharger URL (leave empty for auto-detection)
ZONETELECHARGER_URL=

# -----------------------------------------------------------------------------
# Telegram Channels (for auto-detection of site URLs)
# -----------------------------------------------------------------------------
# Official Telegram channels used to fetch current site URLs.
# Default values are pre-configured, only change if channels move.

#WAWACITY_TELEGRAM=https://t.me/s/Wawacityofficiel
#ZONETELECHARGER_TELEGRAM=https://t.me/s/ztofficiel

# DarkiWorld URL (currently disabled - not fully implemented)
# DARKIWORLD_URL=https://darkiworld.xxx/
# DARKIWORLD_API_KEY=

# -----------------------------------------------------------------------------
# DL-Protect Resolver Service
# -----------------------------------------------------------------------------
# URL of the Botasaurus service for resolving dl-protect links
# In docker-compose, this is automatically set to http://dlprotect-resolver:5000
DLPROTECT_SERVICE_URL=http://localhost:5000

# Where to resolve dl-protect links: 'indexer' or 'downloader'
# - indexer: Links are resolved when search results are returned (faster browsing in Radarr/Sonarr)
# - downloader: Links are resolved only when a download is requested (less load on resolver service)
DLPROTECT_RESOLVE_AT=downloader

# -----------------------------------------------------------------------------
# Downloader Service Configuration
# -----------------------------------------------------------------------------
# Path to the blackhole folder where .torrent files are dropped
BLACKHOLE_PATH=/path/to/blackhole

# Path to store downloader configuration (optional, defaults to ./downloader-config)
DOWNLOADER_CONFIG_PATH=./downloader-config

# -----------------------------------------------------------------------------
# Debrid Services (Optional - multiple can be enabled, fallback in order)
# -----------------------------------------------------------------------------
# Debrid services unlock premium download links from file hosters.
# Enable multiple services for fallback - if one fails, the next is tried.

# AllDebrid
# Get your API key at: https://alldebrid.com/apikeys/
ALLDEBRID_ENABLED=false
ALLDEBRID_API_KEY=

# Real-Debrid
# Get your API key at: https://real-debrid.com/apitoken
REALDEBRID_ENABLED=false
REALDEBRID_API_KEY=

# Premiumize
# Get your API key at: https://www.premiumize.me/account
PREMIUMIZE_ENABLED=false
PREMIUMIZE_API_KEY=

# -----------------------------------------------------------------------------
# Download Station (Synology) - Optional, can also be configured via Web UI
# -----------------------------------------------------------------------------
DS_ENABLED=false
# DS_HOST=192.168.1.100
# DS_PORT=5000
# DS_USERNAME=
# DS_PASSWORD=
# DS_USE_SSL=false
# DS_DESTINATION=/Volume 1/downloads

# -----------------------------------------------------------------------------
# JDownloader - Optional, can also be configured via Web UI
# -----------------------------------------------------------------------------
JD_ENABLED=false
# API Mode: local, remote, or auto
# JD_API_MODE=auto

# Local API (JDownloader running on same network)
# JD_LOCAL_HOST=192.168.1.100
# JD_LOCAL_PORT=3128

# MyJDownloader Remote API
# JD_EMAIL=
# JD_PASSWORD=
# JD_DEVICE=JDownloader@MyPC

# -----------------------------------------------------------------------------
# aria2 - Optional, can also be configured via Web UI
# -----------------------------------------------------------------------------
ARIA2_ENABLED=false
# ARIA2_HOST=localhost
# ARIA2_PORT=6800
# ARIA2_SECRET=
# ARIA2_DIR=/downloads

# -----------------------------------------------------------------------------
# pyLoad - Optional, can also be configured via Web UI
# -----------------------------------------------------------------------------
PYLOAD_ENABLED=false
# PYLOAD_HOST=localhost
# PYLOAD_PORT=8000
# PYLOAD_USERNAME=
# PYLOAD_PASSWORD=
# PYLOAD_USE_SSL=false

# -----------------------------------------------------------------------------
# curl (direct download) - Optional
# Downloads directly to the specified destination path
# Files are downloaded to a temp location first, then moved to avoid partial files
# -----------------------------------------------------------------------------
CURL_ENABLED=false
# CURL_DESTINATION=/downloads

# -----------------------------------------------------------------------------
# wget (direct download) - Optional
# Downloads directly to the specified destination path
# Files are downloaded to a temp location first, then moved to avoid partial files
# -----------------------------------------------------------------------------
WGET_ENABLED=false
# WGET_DESTINATION=/downloads

# -----------------------------------------------------------------------------
# Downloads Path (for curl/wget direct downloads)
# -----------------------------------------------------------------------------
# Path where curl/wget will save downloaded files
DOWNLOADS_PATH=./downloads

# -----------------------------------------------------------------------------
# Advanced Configuration
# -----------------------------------------------------------------------------
# Scan interval for the blackhole watcher (seconds)
# SCAN_INTERVAL=10

# Maximum number of pages to crawl per search (per provider)
# Lower values = faster searches, higher values = more results
SEARCH_MAX_PAGES=5

# Disable remote dl-protect cache (shared cache between users)
# Set to true if the remote cache server is unreachable
# Local cache will still be used
DISABLE_REMOTE_DL_PROTECT_CACHE=false

# Debug mode: if true, processed .torrent files are moved to processed/ folder
# If false (default), processed .torrent files are deleted
DEBUG=false

# Node environment (development/production)
NODE_ENV=production

# -----------------------------------------------------------------------------
# DDL-qBittorrent - qBittorrent-compatible API for Sonarr/Radarr
# -----------------------------------------------------------------------------
# This service emulates qBittorrent's WebUI API, allowing Sonarr/Radarr to use
# it as a download client for direct downloads (DDL) instead of torrents.

# Port for the qBittorrent-compatible API
QBITTORRENT_PORT=8080

# Authentication credentials
# These are used to login via the qBittorrent WebUI API
QB_USERNAME=admin
QB_PASSWORD=adminadmin

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=3

# Path to store qBittorrent service data (SQLite database)
QBITTORRENT_DATA_PATH=./qbittorrent-data

# Path for temporary downloads (files are downloaded here first, then moved)
DOWNLOADS_TEMP_PATH=./downloads-temp
